.container{:style => 'margin-top: 75px;'}
  %form.form-horizontal(action='/admin/login' method='post')
    .form-group
      %label.col-sm-2.control-label{:for => 'email'} Email
      .col-sm-10
        %input#email.form-control{:type => 'email', :placeholder => 'you@maglaboratory.org', :name => 'email'}
    .form-group
      %label.col-sm-2.control-label{:for => 'password'} Password
      .col-sm-10
        %input#password.form-control{:type => 'password', :name => 'password', :placeholder => '***'}
    .form-group
      .col-sm-offset-2.col-sm-10
        %button.btn.btn-default{:type => 'submit'} Login
